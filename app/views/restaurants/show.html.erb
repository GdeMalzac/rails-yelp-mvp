<h1><%= @restaurant.name %></h1>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %></p>
<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %> (<%= review.rating %>/5)</li>
  <% end %>
</ul>
<br>
<%= link_to 'Back to list', restaurants_path %>
<%= link_to 'Add review', new_restaurant_review_path(@restaurant) %>
<%= link_to 'Edit', edit_restaurant_path %>
<%= link_to 'Delete',
  restaurant_path(@restaurant),
  data: {turbo_method: :delete, turbo_confirm: "Ari you sourou dess ka"}
 %>
